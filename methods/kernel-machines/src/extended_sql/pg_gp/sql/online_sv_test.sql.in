-- Example usage for regression:
delete from MADLIB_SCHEMA.sv_results;
delete from MADLIB_SCHEMA.sv_model;

select MADLIB_SCHEMA.generateRegData(1000, 5);
insert into MADLIB_SCHEMA.sv_results (select 'myexp', MADLIB_SCHEMA.online_sv_reg_agg(ind, label) from MADLIB_SCHEMA.sv_train_data);
select MADLIB_SCHEMA.storeModel('myexp');
select MADLIB_SCHEMA.svs_predict('myexp', '{1,2,4,20,10}');
   
-- To learn multiple support vector regression models
insert into MADLIB_SCHEMA.sv_results (select 'myexp' || gp_segment_id, MADLIB_SCHEMA.online_sv_reg_agg(ind, label) from MADLIB_SCHEMA.sv_train_data group by gp_segment_id);
select MADLIB_SCHEMA.storeModel('myexp', 2); -- n is the number of segments FIX ME
select * from MADLIB_SCHEMA.svs_predict_combo('myexp', 2, '{1,2,4,20,10}');

-- Example usage for classification:
select MADLIB_SCHEMA.generateClData(2000, 5);
insert into MADLIB_SCHEMA.sv_results (select 'myexpc', MADLIB_SCHEMA.online_sv_cl_agg(ind, label) from MADLIB_SCHEMA.sv_train_data);
select MADLIB_SCHEMA.storeModel('myexpc');
select MADLIB_SCHEMA.svs_predict('myexpc', '{10,-2,4,20,10}');
   
-- To learn multiple support vector models, replace the above by 
insert into MADLIB_SCHEMA.sv_results (select 'myexpc' || gp_segment_id, MADLIB_SCHEMA.online_sv_cl_agg(ind, label) from MADLIB_SCHEMA.sv_train_data group by gp_segment_id);
select MADLIB_SCHEMA.storeModel('myexpc', 2); -- n is the number of segments FIX ME
